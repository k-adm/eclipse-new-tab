{
  "manifest_version": 3,
  "name": "Eclipse New Tab",
  "version": "1.0.1",
  "description": "Custom new tab page with search, dynamic backgrounds, and shortcuts",
  "permissions": [
    "storage",
    "webNavigation",
    "tabs"
  ],
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
